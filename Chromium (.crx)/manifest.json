{	
	"name"				: "SmartClipboard",
	"description"		: "__MSG_description__",
	"developer"			: {"name" : "Christoph D."},
	"homepage_url"		: "http://my.opera.com/christoph142/blog",
	
	"default_locale"	: "en",
	"version"			: "2.0",
	"icons"				: { "16": "images/icon16.png", "128": "images/icon128.png" },
	
	"content_scripts" :
	[{
		  "matches"		: ["<all_urls>"],
		  "css"			: ["includes/clipboard.css"],
		  "js"			: ["includes/clipboard.js"],
		  "run_at"		: "document_start",
		  "all_frames"	: true
	}],
	
	"background"		: {"scripts": ["background.js"]},
  
	"permissions"		: ["contextMenus", "storage", "clipboardRead", "clipboardWrite"],
	"options_page"		: "options/options.html",
	
	"manifest_version"	: 2
}